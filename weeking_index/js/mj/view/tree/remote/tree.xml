<mj-view>
	<mj-panel data-width="100%" data-height="100%">
		<mj-panel-head data-shrink="false" data-icon="fa fa-fire">
			动态菜单
		</mj-panel-head>
		<mj-panel-body>
			<mj-tree data-id="tree-remote-tree" data-click="onTreeClick" data-border="false" data-autoload="false" data-action="" data-icon-open="fa-bars" data-icon-close="fa-tasks" data-icon-leaf="fa-file" data-method="get" data-expanded="false" data-root-showable="false" data-root-text="组织机构">
			</mj-tree>
		</mj-panel-body>
		<mj-panel-foot>
			<mj-button data-text="展开" data-click="expandFunc">
			</mj-button>
			<mj-button data-text="收起" data-click="collapseFunc">
			</mj-button>
			<mj-button data-text="添加" data-click="addChildFunc">
			</mj-button>
			<mj-button data-text="删除" data-click="removeChildFunc">
			</mj-button>
			<mj-button data-text="刷新" data-click="refreshSelectNodeFunc">
			</mj-button>
			<mj-button data-text="刷新树" data-click="refreshRootNodeFunc" data-hide="true">
			</mj-button>
		</mj-panel-foot>
	</mj-panel>
</mj-view>
